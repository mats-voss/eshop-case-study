<div class="product-tabs">
  <!-- navigation tabs -->
  <div class="product-tabs__header">
    <button class="product-tab product-tab--outfit active" data-tab="outfit">{{ 'outfit_set.outfit_tab' | t }}</button>
    <span class="product-tabs__divider">{{ 'outfit_set.products_included' | t }} <span class="product-tabs__arrow">â†’</span></span>
    {% for product in metaobject.products.value %}
      <button class="product-tab" data-tab="product-{{ forloop.index }}">{{ product.title }}</button>
    {% endfor %}
  </div>

  <div class="product-tabs__content">
    <!-- outfit tab -->
    <div class="product-tab-content active" id="outfit">
      {% render 'outfit-set-outfit-tab-content', metaobject: metaobject %}
    </div>

    <!-- product tabs -->
    {% for product in metaobject.products.value %}
      <div class="product-tab-content" id="product-{{ forloop.index }}">
        {% render 'outfit-set-product-tab-content', product: product, index: forloop.index %}
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .product-tabs {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .product-tabs__header {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 2rem;
    border-bottom: none;
    padding: 1rem;
    position: sticky;
    top: 0;
    background: rgb(var(--color-background));
    z-index: 2;
    align-items: center;
  }

  .product-tabs__divider {
    color: rgba(var(--color-foreground), 0.8);
    font-size: 1.2rem;
    margin: 0 2rem;
    white-space: nowrap;
    font-weight: 500;
  }

  .product-tabs__arrow {
    margin-left: 0.5rem;
    display: inline-block;
    transition: transform 0.3s ease;
  }

  .product-tabs__divider:hover .product-tabs__arrow {
    transform: translateX(4px);
  }

  .product-tab {
    background: rgba(var(--color-foreground), 0.05);
    border: none;
    padding: 1rem 2rem;
    cursor: pointer;
    font-size: 1.2rem;
    font-weight: 500;
    color: rgba(var(--color-foreground), 0.75);
    position: relative;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .product-tab--outfit {
    background: rgba(var(--color-foreground), 0.1);
    font-weight: 600;
    border: 1px solid rgba(var(--color-foreground), 0.2);
  }

  .product-tab--outfit:hover {
    background: rgba(var(--color-foreground), 0.15);
  }

  .product-tab--outfit.active {
    background: rgb(var(--color-foreground));
    color: rgb(var(--color-background));
    border-color: rgb(var(--color-foreground));
  }

  .product-tab:hover {
    background: rgba(var(--color-foreground), 0.1);
    color: rgb(var(--color-foreground));
  }

  .product-tab.active {
    background: rgb(var(--color-foreground));
    color: rgb(var(--color-background));
  }

  .product-tab.active::after {
    display: none;
  }

  .product-tab-content {
    display: none;
  }

  .product-tab-content.active {
    display: block;
  }

  @media screen and (max-width: 749px) {
    .product-tabs__header {
      overflow-x: auto;
      padding: 0.5rem;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
    }

    .product-tabs__header::-webkit-scrollbar {
      display: none;
    }

    .product-tabs__divider {
      margin: 0 1rem;
      font-size: 1.1rem;
    }

    .product-tab {
      white-space: nowrap;
      padding: 0.75rem 1.5rem;
      font-size: 1.1rem;
    }
  }
</style>

<script>
  // add listener for tab clicks
  document.addEventListener('DOMContentLoaded', function() {
    const tabs = document.querySelectorAll('.product-tab');
    const tabContents = document.querySelectorAll('.product-tab-content');

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        tabs.forEach(t => t.classList.remove('active'));
        tabContents.forEach(c => c.classList.remove('active'));

        tab.classList.add('active');
        const tabId = tab.getAttribute('data-tab');
        document.getElementById(tabId).classList.add('active');
      });
    });
  });
</script> 